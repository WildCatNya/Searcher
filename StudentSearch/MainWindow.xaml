<Window x:Class="Searcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Searcher.Views"
        xmlns:viewmodels="clr-namespace:Searcher.ViewModels"
        mc:Ignorable="d"
        Title="Поиск" Height="780" Width="950">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Width="250" Height="25" Text="{Binding Searcher, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" />
            <Button Margin="30 0 0 0" Command="{Binding SearchCommand}" Content="Поиск" Width="100" />
            <Button Margin="30 0 0 0" Command="{Binding ClearCommand}" Width="100" Content="Очистить" />
        </StackPanel>
        <views:PersonView Grid.Row="1" />
    </Grid>
</Window>
